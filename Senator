<script>
function closeModalAndShowPopup() {
  // Close modal
  closeModal('myModal4');
  
  // Trigger ripple effect
  triggerRipple();
  
  // Show message popup
  const popup = document.getElementById('popup');
  popup.style.display = 'block';
  
  // Hide popup after 2 seconds
  setTimeout(() => {
    popup.style.display = 'none';
  }, 5000);
}

function triggerRipple() {
  // Create ripple element
  const ripple = document.createElement('span');
  ripple.classList.add('ripple');
  
  // Calculate ripple size and position
  const diameter = Math.max(document.documentElement.clientWidth, document.documentElement.clientHeight);
  const radius = diameter / 2;
  const xPos = radius;
  const yPos = radius;
  
  // Set ripple size and position
  ripple.style.width = ripple.style.height = `${diameter}px`;
  ripple.style.left = `${xPos}px`;
  ripple.style.top = `${yPos}px`;
  
  // Add ripple to container
  document.body.appendChild(ripple);
  
  // Remove ripple after animation ends
  ripple.addEventListener('animationend', () => {
    ripple.remove();
  });
}
</script>




