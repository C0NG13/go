    <!-- JavaScript to handle the modal -->
    <script>
        var emailContent = {
            "Email 1": "Dear All, \nI am going to the Symmetric Spaces talk at the University of Warwick on Tuesday. If you would like to come along with me, please respond to this email. \nProf. Moriarty\n\<meme_imgage\>",
            "Email 2": "Dear Class, \nClass is cancelled next week. Contact my assistant, Sarah, to schedule your exam time. \nSincerely,\nProfessor T ",



	    "Email 3": "MESSAGE",
            "Email 4": "MESSAGE",
	    "Email 5": "MESSAGE",
            "Email 6": "MESSAGE",
	    "Email 7": "MESSAGE",
            "Email 8": "MESSAGE",
	    "Email 9": "MESSAGE",
            "Email 10": "MESSAGE",
	    "Email 11": "MESSAGE",
            "Email 12": "MESSAGE",
	    "Email 13": "MESSAGE",
            "Email 14": "MESSAGE",
            "Email 15": "MESSAGE",
            // Add more email content here
        };

		// Function to replace '\n' characters with '<br>' tags
	function formatMessage(message) {
	    return message.replace(/\n/g, "<br>");
	}

	// Event listener for each button to open the modal with the appropriate email content
	var buttons = document.querySelectorAll('.button-container button');
	buttons.forEach(function(button) {
    button.addEventListener('click', function() {
	        var emailName = this.getAttribute('data-email');
 	       document.getElementById("myModal").style.display = "block";
   	     document.getElementById("modalText").innerHTML = formatMessage(emailContent[emailName]);
 	   });
	});

        // Event listener for each button to open the modal with the appropriate email content
        var buttons = document.querySelectorAll('.button-container button');
        buttons.forEach(function(button) {
            button.addEventListener('click', function() {
                var emailName = this.getAttribute('data-email');
                document.getElementById("myModal").style.display = "block";
                document.getElementById("modalText").innerText = emailContent[emailName];
            });
        });
    </script>
