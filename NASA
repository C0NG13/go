	<script>
  // Wait for the DOM to be fully loaded
  document.addEventListener('DOMContentLoaded', function() {
    // Find the anchor tag with ID 'theirs-link'
    var link = document.querySelector('a[href="http://www.nas.nasa.go/hecc/accounts/getaccounts.html"]');

    // Add click event listener to the anchor tag
    link.addEventListener('click', function(event) {
      // Prevent default behavior (opening the link)
      event.preventDefault();
      
      // Redirect to 404.html
      window.location.href = '404.html';
    });
  });
</script>
