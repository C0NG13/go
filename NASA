/* Styles for the ripple effect */
.ripple {
  position: absolute;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.5); /* Semi-transparent white */
  animation: ripple-animation 0.6s ease-out;
  pointer-events: none; /* Ensure the ripple doesn't interfere with click events */
}

@keyframes ripple-animation {
  0% {
    transform: scale(0);
    opacity: 1;
  }
  100% {
    transform: scale(3);
    opacity: 0;
  }
}

