<script>
    // Function to show the pop-up
    function showPopup() {
        document.getElementById('popup').style.display = 'block';
    }

    // Function to be executed after the delay
    function delayedPopup() {
        setTimeout(showPopup, 3000); // 3000 milliseconds = 3 seconds
    }

    // Call the delayedPopup function when the page is loaded
    window.onload = delayedPopup;
</script>
